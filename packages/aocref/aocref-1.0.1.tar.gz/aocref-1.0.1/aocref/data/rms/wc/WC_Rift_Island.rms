  {
    base_terrain                LANDA
    number_of_clumps 		25
    number_of_tiles 		1000
    set_scale_by_groups
    set_scale_by_size
  }
else
  create_elevation        7
  {
    base_terrain                LANDA
    number_of_clumps 		25
    number_of_tiles 		4000
    set_scale_by_groups
    set_scale_by_size
  }
endif


