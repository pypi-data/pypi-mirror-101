/* ECL_RIFT_ISLAND */
/*
 * Rift Island map used in the Africa stage for the ECL.
 * This map is the winning submission for the Africa region of the map contest.
 * For the final version, I removed parts of the script that were used for
 * the ice version of the map, and I slightly changed the spacing between fish
 * and the number of fish for large maps to make the fish generation more fair
 * for players.
 */

/* Disputed_Fen v2 */
/* Optimal for 3v3 &4v4 */

/* Sling nerf constants. */
#const TRIBUTE_INEFFICIENCY 46
#const BANKING 17
#const COINAGE 23
#const COINAGE_IMP_DISABLER 224

/* TERRAIN DICTIONARY */
#const LANDA  14
#const LANDB  6
#const LANDC  9
#const ISLELAND 0
#const CONNECTION 2
#const TREEA     13
#const TREEB     10
#const STRAGGLER 1063
#const GAIASHEEP 1060
#const GAIABOAR  1139
#const GAIADEER  1019
#const BUSHES 1059


<PLAYER_SETUP>
random_placement
ai_info_map_type ARABIA 0 0 0

/* Sling nerfs */
effect_percent MOD_RESOURCE TRIBUTE_INEFFICIENCY ATTR_SET 40
effect_amount DISABLE_TECH BANKING ATTR_DISABLE 17
effect_amount DISABLE_TECH COINAGE ATTR_DISABLE 23
effect_amount DISABLE_TECH COINAGE_IMP_DISABLER ATTR_DISABLE 224


<LAND_GENERATION>
base_terrain WATER

create_land
{
  terrain_type          CONNECTION                 /* FEN */
  land_percent					        100                /* ADJUST BY MAP SIZE */
  if NORMAL_MAP
    left_border                   32
    right_border                  32
    top_border                    32
    bottom_border                 32
  elseif MEDIUM_MAP
    left_border                   30
    right_border                  30
    top_border                    30
    bottom_border                 30
  elseif SMALL_MAP
    left_border                   30
    right_border                  30
    top_border                    30
    bottom_border                 30
  elseif TINY_MAP
    left_border                   25
    right_border                  25
    top_border                    25
    bottom_border                 25
  else
    left_border                   28
    right_border                  28
    top_border                    28
    bottom_border                 28
  endif
  clumping_factor               12
  other_zone_avoidance_distance  0
  zone 1
  land_id  1
  base_elevation  0
}

create_player_lands
{
  terrain_type                  LANDA
  land_percent                     100
  base_size                        12
  border_fuzziness                 25
  clumping_factor                  15
  if TINY_MAP
    left_border                       7
    right_border                      7
    top_border                        7
    bottom_border                     7
  elseif MEDIUM_MAP
    left_border                       7
    right_border                      7
    top_border                        7
    bottom_border                     7
  elseif NORMAL_MAP
    left_border                       7
    right_border                      7
    top_border                        7
    bottom_border                     7
  else
    left_border                       6
    right_border                      6
    top_border                        6
    bottom_border                     6
  endif
  set_zone_by_team
  if TINY_MAP
    other_zone_avoidance_distance    3
  elseif SMALL_MAP
    other_zone_avoidance_distance    6
  elseif MEDIUM_MAP
    other_zone_avoidance_distance    6
  elseif NORMAL_MAP
    other_zone_avoidance_distance    8
  else
    other_zone_avoidance_distance    10
  endif
  base_elevation  1
}


<TERRAIN_GENERATION>

/* MIXING WATER */
create_terrain MED_WATER
{
  base_terrain WATER
  if TINY_MAP
    land_percent 5
    number_of_clumps               15
    spacing_to_other_terrain_types 0
  elseif NORMAL_MAP
    land_percent 4
    number_of_clumps               25
    spacing_to_other_terrain_types 0
  elseif MEDIUM_MAP
    land_percent 4
    number_of_clumps               25
    spacing_to_other_terrain_types 0
  else
    land_percent 3
    number_of_clumps               30
    spacing_to_other_terrain_types 1
  endif
  clumping_factor    80
}

/* ISLES IN MIDDLE */
create_terrain ISLELAND
{
  base_terrain CONNECTION
  number_of_clumps               25
  land_percent                   4
  spacing_to_other_terrain_types 2
  set_scale_by_groups
  clumping_factor    60
}

create_terrain SHALLOW
{
  base_terrain CONNECTION
  number_of_clumps               30
  spacing_to_other_terrain_types 1
  land_percent 2
}

/* PRIMARY FOREST */
create_terrain TREEA
{
  base_terrain                   LANDA
  spacing_to_other_terrain_types 2
  land_percent                   15
  if MEDIUM_MAP
    number_of_clumps               16
  elseif SMALL MAP
    number_of_clumps               17
  elseif TINY_MAP
    number_of_clumps               19
  else
    number_of_clumps               9
  endif
  set_avoid_player_start_areas
  set_scale_by_groups
  clumping_factor            80
}

/* PRIMARY PATCH */
create_terrain LANDB
{
  base_terrain                   LANDA
  number_of_clumps               20
  land_percent                   8
  set_scale_by_size
}


<ELEVATION_GENERATION>

if NORMAL_MAP
  create_elevation        7
  {
    base_terrain                LANDA
    number_of_clumps 		25
    number_of_tiles 		2700
    set_scale_by_groups
    set_scale_by_size
  }
elseif MEDIUM_MAP
  create_elevation        7
  {
    base_terrain                LANDA
    number_of_clumps 		25
    number_of_tiles 		1800
    set_scale_by_groups
    set_scale_by_size
  }
elseif SMALL_MAP
