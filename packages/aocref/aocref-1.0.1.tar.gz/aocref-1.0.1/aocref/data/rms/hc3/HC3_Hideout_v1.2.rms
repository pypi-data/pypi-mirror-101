<PLAYER_SETUP>
random_placement

<LAND_GENERATION>

base_terrain GRASS

create_player_lands {
  terrain_type GRASS2
  land_percent 16
  base_size 12
  top_border 18
  bottom_border 18
  left_border 18
  right_border 18
  clumping_factor 15
  other_zone_avoidance_distance 16
}

create_land {
  terrain_type FOREST
  land_percent 90
  top_border 20
  bottom_border 20
  right_border 20
  left_border 20
  clumping_factor 15
  other_zone_avoidance_distance 0
  zone 52
}

<TERRAIN_GENERATION>

create_terrain FOREST {
  base_terrain GRASS
  land_percent 4
  number_of_clumps 8
  set_avoid_player_start_areas
  set_scale_by_groups
}


<ELEVATION_GENERATION>

create_elevation 4 {
  base_terrain GRASS
  number_of_clumps 10
  number_of_tiles 1000
  set_scale_by_groups
  set_scale_by_size
}


